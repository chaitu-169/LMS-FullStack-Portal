{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "moduleResolution": "node",                  // <- CHANGED from 'bundler'
    "allowSyntheticDefaultImports": true,        // <- Recommended for React
    "esModuleInterop": true,                     // <- Recommended for imports
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": []
}
